<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<br>
		<div class="row">
			<div class="col-8">
				<div class="jumbotron">
				  <h1 class="display-4">Welcome to CU Boulder's Football Home Page!</h1>
				  <p class="lead">Welcome to GreenThumb</p>
					<hr>
					<p> Plant Message: 
						<% if(id)
						{%>
							<%- name %>
					 <% }%>
					<form action="/home/pick_plant" method="post">
						<div class="form-group row">
							<label class="col-sm-2 col-form-label" for="plant_id">Plant ID:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" name="plant_id" id="plant_id"  placeholder="Enter Plant ID" maxlength="6">
							</div>
						</div>
						<div class="form-group row">
							<label class="col-sm-2 col-form-label"  for="plant_name">Plant Name:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" name="plant_name" id="plant_name" placeholder="Enter Plant's Name">
							</div>
						</div>
						<div class="form-group row">
							<label  class="col-sm-2 col-form-label" for="plant_description">Description:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="plant_description" name="plant_description" placeholder="Enter the Plant's Description">
							</div>
						</div>
						<div class="form-group row">
							<label  class="col-sm-2 col-form-label" for="plant_description">Image:</label>
							<div class="col-sm-10">
								<input type="text" class="form-control" id="plant_img" name="plant_img" placeholder="Enter the Plant's image filepath">
							</div>
						</div>
						<!-- add an image here -->
						<button type="submit" class="btn btn-primary btn-block">Submit</button>  
					</form>
					<br>
					<hr>
					<br>
					<form action="/home/pick_color" method="get">
					<% 
					if (data) { 
					  var buttons = '';
						data.forEach(function(item){
					  		 buttons += '<button type="submit" name="plant_selection" class="btn btn-block" value="' + item.id + '">';
				  			 if(item.description){ 
				  		       buttons += item.name + '</button>'; 
				  		     } 
				  		     else{ 
				  		    	 buttons += item.id + '</button>';
				  		     } 
					  	 }); %>
					  	 <%- buttons %> 
				  	<% } %>
				  </form>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>