<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (plant) { %>
        <form class="add-plant-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="description">Desciption</label>
                    <input type="text" class="form-control" name="description" id="description" value="<%= player.desc %>" required>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Plant</button>
        </form>
    <% } else { %>
        <p class="text-center">Plant Not Found. Click <a href="/add">here</a> to add a new plant.</p>
    <% } %>
</div>
</div>
</body>
</html>