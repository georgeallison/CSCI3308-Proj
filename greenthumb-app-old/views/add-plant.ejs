<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-plant-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="description" id="description" placeholder="Description" required>
                </div>
                <div class="col-md-12">
                    <label for="plant-img"><b>Plant Image</b></label><br>
                    <input type="file" name="image" id="plant-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Plant!</button>
        </form>
    </div>
</div>
</body>
</html>